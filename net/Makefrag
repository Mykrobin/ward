# -*- makefile-gmake -*-

-include $(O)/third_party/lwip/src/api/*.d
-include $(O)/third_party/lwip/src/netif/*.d
-include $(O)/third_party/lwip/src/core/*.d
-include $(O)/third_party/lwip/src/core/ipv4/*.d
-include $(O)/net/*.d

LDEPS += $(O)/liblwip.a
#LFLAGS += -llwip

CFLAGS   += -Ithird_party/lwip/src/include -Inet -Ithird_party/lwip/src/include/ipv4 -DLWIP
CXXFLAGS += -Ithird_party/lwip/src/include -Inet -Ithird_party/lwip/src/include/ipv4 -DLWIP

LWIP_SRCFILES += \
	third_party/lwip/src/api/api_lib.c \
	third_party/lwip/src/api/api_msg.c \
	third_party/lwip/src/api/err.c \
	third_party/lwip/src/api/sockets.c \
	third_party/lwip/src/api/tcpip.c \
	third_party/lwip/src/api/netbuf.c \
	third_party/lwip/src/core/init.c \
	third_party/lwip/src/core/tcp_in.c \
	third_party/lwip/src/core/dhcp.c \
	third_party/lwip/src/core/def.c \
	third_party/lwip/src/core/mem.c \
	third_party/lwip/src/core/memp.c \
	third_party/lwip/src/core/netif.c \
	third_party/lwip/src/core/pbuf.c \
	third_party/lwip/src/core/raw.c \
	third_party/lwip/src/core/stats.c \
	third_party/lwip/src/core/sys.c \
	third_party/lwip/src/core/tcp.c \
	third_party/lwip/src/core/timers.c \
	third_party/lwip/src/core/ipv4/ip_addr.c \
	third_party/lwip/src/core/ipv4/icmp.c \
	third_party/lwip/src/core/ipv4/ip.c \
	third_party/lwip/src/core/ipv4/ip_frag.c \
	third_party/lwip/src/core/ipv4/inet_chksum.c \
	third_party/lwip/src/core/ipv4/inet.c \
	third_party/lwip/src/core/tcp_out.c \
	third_party/lwip/src/core/udp.c \
	third_party/lwip/src/netif/etharp.c
LWIP_OBJFILES := $(patsubst %.c, $(O)/%.o, $(LWIP_SRCFILES))

$(O)/net/%.o: CXXFLAGS+=-mcmodel=kernel -Ithird_party/libcxx/include -DXV6_KERNEL -mno-sse \
						-Ithird_party/lwip/src/include -Ithird_party/lwip/src/include/ipv4

$(O)/third_party/lwip/src/%.o: CFLAGS+=-mcmodel=kernel -Ithird_party/libcxx/include -DXV6_KERNEL \
	-mno-sse -Wno-attributes -Wno-address -Wno-char-subscripts -Wno-format -O2 \
	-Ithird_party/lwip/src/include -Ithird_party/lwip/src/include/ipv4 -Inet -Inet/arch

$(O)/liblwip.a: $(LWIP_OBJFILES) $(O)/net/sys_arch.o $(O)/net/if.o
	@echo "  AR     $@"
	$(Q)mkdir -p $(@D)
	$(Q)$(AR) r $@ $(LWIP_OBJFILES) $(O)/net/sys_arch.o $(O)/net/if.o

